<Page x:Class="JurassicRisk.Views.JeuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JurassicRisk.Views"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JeuPage">

    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="/Background/FondCarte.gif" Stretch="Fill" />
        <Viewbox Stretch="Fill" x:Name="ViewboxCanvas">
            
            <Canvas x:Name="CarteCanvas" Height="1080" Width="1920" Margin="-50,0,20,70">

                <ContentPresenter Content="{Binding Carte}" />


            </Canvas>
        </Viewbox>
    </Grid>
</Page>
