<Page x:Class="JurassicRisk.Views.JeuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JurassicRisk.Views"
      Title="JeuPage" Height="800" Width="1280">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Red" Height="{Binding ElementName=MainWin,Path=ActualHeight}" Width="{Binding ElementName=MainWin,Path=ActualWidth}">
            <Viewbox Stretch="Fill" ClipToBounds="True" Height="{Binding ElementName=MainWin,Path=ActualHeight}" Width="{Binding ElementName=MainWin,Path=ActualWidth}" x:Name="ViewboxCanvas">

                <local:CustomCarteCanvas x:Name="CarteCanvas" Background="AliceBlue"/>

            </Viewbox>

        </Canvas>
        
    </Grid>
</Page>
